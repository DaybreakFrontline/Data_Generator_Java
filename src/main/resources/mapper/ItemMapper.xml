<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.test.yuxi.mapper.ItemInfoMapper" >

    <resultMap id="BaseResultMap" type="com.test.yuxi.pojo.ItemInfo" >
        <id column="ITEM_ID" property="itemId" jdbcType="VARCHAR" />
        <result column="ITEM_NAME" property="itemName" jdbcType="VARCHAR" />
        <result column="ITEM_MESEGE" property="itemMesege" jdbcType="VARCHAR" />
        <result column="ITEM_PRICE" property="itemPrice" jdbcType="FLOAT" />
        <result column="ITEM_TIME" property="itemTime" jdbcType="DATE" />
    </resultMap>

    <sql id="item_name" >
        ITEM_ID, ITEM_NAME, ITEM_MESEGE, ITEM_PRICE, ITEM_TIME
    </sql>

    <select id="queryItem" resultMap="BaseResultMap"  parameterType="com.test.yuxi.pojo.ItemInfo">
        SELECT
        <include refid="item_name" />
        FROM K_ITEM_INFO WHERE ITEM_ID = #{itemId}
    </select>

    <select id="queryAllItem" resultMap="BaseResultMap" >
        SELECT
        <include refid="item_name" />
        FROM K_ITEM_INFO
    </select>

    <insert id="addItem" parameterType="com.test.yuxi.pojo.ItemInfo"
            useGeneratedKeys="true" keyProperty="ITEM_ID">
       INSERT INTO
       		K_ITEM_INFO
       		(ITEM_ID,ITEM_NAME,ITEM_MESEGE,ITEM_PRICE,ITEM_TIME)
       	VALUES
       		(#{itemId}, #{itemName}, #{itemMesege}, #{itemPrice}, sysdate())
    </insert>

    <update id="modifyItem" parameterType="com.test.yuxi.pojo.ItemInfo" >
        UPDATE
        K_ITEM_INFO
        SET
        <if test="itemName != null">ITEM_NAME = #{itemName},</if>
        <if test="itemMesege != null">ITEM_MESEGE = #{itemMesege},</if>
        <if test="itemPrice != null">ITEM_PRICE = #{itemPrice},</if>
        ITEM_TIME = sysdate()
        WHERE
        ITEM_ID = #{itemId}
    </update>


    <delete id="deleteItem" parameterType="com.test.yuxi.pojo.ItemInfo" >
       DELETE FROM
       		 K_ITEM_INFO
       WHERE
       		ITEM_ID = #{itemId}
    </delete>







